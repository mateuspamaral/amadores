<%= content_for :title, "Ofertas - Amadores" %>

<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
<h2>Eu faço</h2>
<%= simple_form_for (@offer) do |f| %>
  <%= f.input :title, label: 'Título' %>
  <%= f.input :category, label: 'Categoria', :collection => %w[Alimentos
                                                               Artesanátos
                                                               Bebidas
                                                               Brinquedos
                                                               Papelaria
                                                               Vestuário
                                                               Outros] %>
  <%= f.input :address, label: 'Endereço' %>
  <%= f.input :description, label: 'Descriçao' %>
  <%= f.input :available, label: 'Disponivel' %>
  <%= f.input :price, label: 'Preço' %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Ofertar", class: "btn btn-primary" %>
<% end %>
</div>
