<%= content_for :title, "Profile - Edit" %>


  <div class="fcol-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <h2>Edite seu perfil <%= resource_name.to_s.humanize %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
        <%= f.input :email, required: true, autofocus: true, label: 'Email' %>
        <%= f.input :name, required: true, autofocus: true, label: 'Nome'  %>
        <%= f.input :email, required: true, label: 'Confirme o email'  %>
        <%= f.input :mobile, required: true, label: 'Celular'  %>
        <%= f.input :photo, class: "form-actions", label: 'Foto'  %>
        <%= f.input :photo_cache, as: :hidden %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "Deixe em branco se nao quer alterar", required: false, label: 'Nova Senha'  %>
      <%= f.input :password_confirmation, required: false, label: 'Senha' %>
      <%= f.input :current_password, hint: "Precisamos confirmar sua senha", required: true, label: 'Confirme sua senha'  %>
        <div class="form-actions">
        <%= f.button :submit, "Alterar", class: "btn btn-primary" %>
        </div>
    <% end %>
    <h3>Cancelar minha conta</h3>
    <p>Desanimou? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
  </div>





