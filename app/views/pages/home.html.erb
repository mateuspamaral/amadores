<%= content_for :title, "Amadores" %>

<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path 'estampa.jpg'%>);">
      <div class="banner-content">
        <h1>FEITO EM CASA</h1>
        <p>compartilhado com o mundo</p>
        <%= link_to "Ofertas", offers_path, class: "btn-treehouse btn-lg" %>
      </div>
    </div>
<div class="container">
  <h2 class="text-center">Alguem perto de vocÃª faz</h2>
  <div class="row">
    <% @offers.sample(6).each do |offer| %>
      <div class='col-md-3 col-sm-4 col-xs-12' id='card-home'>
        <%= link_to(offer) do %>
          <div class="card">
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('<%= cl_image_path offer.photo %>');">
              <span class="card-category"><%= offer.category %></span>
              <div class="card-description">
                <h2><%= offer.title %></h2>
              </div>
              <!-- <img class="card-user avatar avatar-large" src="images/jad.png"> -->
              <a class="card-link" href="#"></a>
            </div>
            <div class="card-footer">
              <p>Posted on <%= offer.created_at.strftime("%d/%m/%Y") %></p>
              <p><%= offer.address %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>">
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fa fa-instagram"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
  </div>
  <div class="footer-copyright">
